<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.3"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd">
    <navigation-rule>       
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/logout.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>indexPUBLISHER</from-outcome>
            <to-view-id>/journals/journals.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>journals</from-outcome>
            <to-view-id>/journals/journals.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>indexPUBLIC</from-outcome>
            <to-view-id>/subscriptions/subscriptions</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>subscriptions</from-outcome>
            <to-view-id>/subscriptions/subscriptions</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>publications</from-outcome>
            <to-view-id>/publications/publications.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <application>                           
        <locale-config>
            <default-locale>es</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>com.jgranados.journals.i18n.labels</base-name>
            <var>i18nLabels</var>
        </resource-bundle>        
        <resource-bundle>
            <base-name>com.jgranados.journals.i18n.messages</base-name>
            <var>i18nMsgs</var>
        </resource-bundle>  
    </application>
</faces-config>
